<Window x:Class="Labb3_Quiz_MongoDB.Views.Dialogs.ImportQuestionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converter="clr-namespace:Labb3_Quiz_MongoDB.Converters"
        mc:Ignorable="d"
        Title="Import Questions From Open Trivia Database" Height="280" Width="220"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converter:BoolInverterConverter x:Key="InvertBoolConverter"/>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Category:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="1" 
                  ItemsSource="{Binding Categories}"
                  DisplayMemberPath="Name" 
                  SelectedItem="{Binding SelectedCategory}"
                  Margin="0,0,0,10"
                  IsEnabled="{Binding IsBusy, Converter={StaticResource InvertBoolConverter}}"/>

        <Label Grid.Row="2" Content="Difficulty:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="3" 
                  Margin="0,0,0,10"
                  IsEnabled="{Binding IsBusy, Converter={StaticResource InvertBoolConverter}}"
                  SelectionChanged="DifficultyComboBox_SelectionChanged">
            <ComboBoxItem Content="(Alla)" Tag="" IsSelected="True"/>
            <ComboBoxItem Content="Easy" Tag="easy"/>
            <ComboBoxItem Content="Medium" Tag="medium"/>
            <ComboBoxItem Content="Hard" Tag="hard"/>
        </ComboBox>

        <Label Grid.Row="4" Content="Number Of Questions:" FontWeight="Bold" Margin="0,0,0,5"/>
        <Grid Grid.Row="5" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Slider Grid.Column="0" 
                    Minimum="1" 
                    Maximum="50" 
                    Value="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    Height="25"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertBoolConverter}}"/>
            <TextBlock Grid.Column="1" 
                       Text="{Binding Amount}"
                       VerticalAlignment="Center"
                       MinWidth="25"
                       TextAlignment="Right"/>
        </Grid>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Content="Cancel" 
                    Width="75" 
                    Margin="0,0,0,0" 
                    IsCancel="True"
                    Click="CloseButton_Click"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertBoolConverter}}" Height="24"/>
            <Button Content="Import" 
                    Width="75" 
                    Margin="20,0,0,0" 
                    IsDefault="True"
                    Command="{Binding ImportCommand}"/>
        </StackPanel>
    </Grid>
</Window>

