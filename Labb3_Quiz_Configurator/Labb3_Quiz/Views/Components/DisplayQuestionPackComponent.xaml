<UserControl x:Class="Labb3_Quiz_MongoDB.Views.Components.DisplayQuestionPackComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_Quiz_MongoDB.Views.Components"
             xmlns:viewmodel="clr-namespace:Labb3_Quiz_MongoDB.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodel:ConfigurationViewModel}"
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Label 
            Grid.Row="0"
            Content="Questions:" 
            FontWeight="Bold"
            FontSize="14"
            Margin="5"/>
            
        <Border 
            Grid.Row="1"
            BorderBrush="#1c1c1c" 
            BorderThickness="0.5"
            CornerRadius="5"
            SnapsToDevicePixels="True"
            Padding="5"
            Margin="5"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Hidden">
                <ListView
                    BorderThickness="0"
                    SelectionMode="Single"
                    ItemsSource="{Binding ActivePack.Questions}"
                    SelectedItem="{Binding SelectedQuestion, Mode=TwoWay}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="5"
                    Background="#F0F0F0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Text}" FontWeight="Bold" TextWrapping="Wrap"/>
                                <TextBlock 
                                    Text="{Binding Options.Count, StringFormat='{}{0} options'}" 
                                    FontSize="12"
                                    Foreground="Gray"
                                    Margin="0,5,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
