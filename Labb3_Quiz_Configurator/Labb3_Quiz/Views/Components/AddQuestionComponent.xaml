<UserControl x:Class="Labb3_Quiz_MongoDB.Views.Components.AddQuestionComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_Quiz_MongoDB.Views.Components"
             xmlns:viewmodel="clr-namespace:Labb3_Quiz_MongoDB.ViewModels"
             xmlns:models="clr-namespace:Labb3_Quiz_MongoDB.Models"
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding}">
    <Grid Margin="15,0,15,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Question text -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label 
                Grid.Row="0" 
                Content="Question:" 
                FontWeight="Bold"/>
            <TextBox 
                Grid.Row="1"
                Text="{Binding SelectedQuestion.Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue=''}"
                TextWrapping="Wrap"
                MinHeight="60"
                Margin="0,5,0,0"/>
        </Grid>

        <!-- Answer options -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Label Content="Correct Answer:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox 
                Text="{Binding SelectedQuestion.Options[0].Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue=''}"
                Height="30"
                Margin="0,0,0,15"/>

            <Label Content="First Incorrect Answer:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox 
                Text="{Binding SelectedQuestion.Options[1].Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue=''}"
                Height="30"
                Margin="0,0,0,15"/>

            <Label Content="Second Incorrect Answer:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox 
                Text="{Binding SelectedQuestion.Options[2].Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue=''}"
                Height="30"
                Margin="0,0,0,15"/>

            <Label Content="Third Incorrect Answer:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox 
                Text="{Binding SelectedQuestion.Options[3].Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue=''}"
                Height="30"
                Margin="0,0,0,15"/>
        </StackPanel>
    </Grid>
</UserControl>
