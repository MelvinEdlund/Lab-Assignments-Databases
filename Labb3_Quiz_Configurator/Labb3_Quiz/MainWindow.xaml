<Window x:Class="Labb3_Quiz_MongoDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_Quiz_MongoDB"
        xmlns:views="clr-namespace:Labb3_Quiz_MongoDB.Views"
        xmlns:viewmodel="clr-namespace:Labb3_Quiz_MongoDB.ViewModels"
        xmlns:converter="clr-namespace:Labb3_Quiz_MongoDB.Converters"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        d:Height="800" d:Width="400"
        Title="Quiz Configurator" Height="550" Width="800" FontSize="14"
        MinHeight="550" MinWidth="675">
    <Window.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding CreateNewPackCommand}"/>
        <KeyBinding Key="Delete" Modifiers="Ctrl" Command="{Binding RemoveQuestionPackCommand}"/>
        <KeyBinding Key="I" Modifiers="Ctrl" Command="{Binding ImportQuestionsCommand}"/>
        <KeyBinding Key="Q" Modifiers="Ctrl" Command="{Binding ConfigurationViewModel.AddQuestionCommand}"/>
        <KeyBinding Key="Q" Modifiers="Ctrl+Shift" Command="{Binding ConfigurationViewModel.RemoveQuestionCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveAllCommand}"/>
        <KeyBinding Key="F11" Command="{Binding ToggleFullScreenCommand}"/>
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding ShowPlayerCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ShowConfigCommand}"/>
    </Window.InputBindings>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0" />

        <ContentControl Grid.Row="1" Content="{Binding CurrentView}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodel:ConfigurationViewModel}">
                    <views:ConfigurationView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodel:PlayerViewModel}">
                    <views:PlayerView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
